# Temple Configuration
TEMPLE_HOST=0.0.0.0
TEMPLE_PORT=8100
TEMPLE_LOG_LEVEL=info
# Runtime mode: combined (MCP + REST on one port), mcp, or rest
TEMPLE_RUNTIME_MODE=combined
# MCP transport for mcp/combined modes
TEMPLE_MCP_TRANSPORT=streamable-http

# ChromaDB
TEMPLE_CHROMA_MODE=embedded
TEMPLE_CHROMA_HOST=temple-chromadb
TEMPLE_CHROMA_PORT=8000

# Embedding model
TEMPLE_EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Data directories
TEMPLE_DATA_DIR=./data
TEMPLE_KUZU_DIR=./data/kuzu
TEMPLE_AUDIT_DIR=./data/audit

# Authentication (empty = no auth, for local dev)
# Set to a strong random string to enable Bearer token auth on the MCP endpoint
TEMPLE_API_KEY=

# Base URL for OAuth metadata (used by Claude.ai remote MCP connector)
# Set to your public-facing URL (e.g. https://temple.tython.ca)
TEMPLE_BASE_URL=

# Pre-registered OAuth client (both empty = open dynamic registration)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
TEMPLE_OAUTH_CLIENT_ID=
TEMPLE_OAUTH_CLIENT_SECRET=
# Comma-separated redirect URIs for pre-registered OAuth client mode
# Example: https://claude.ai/api/mcp/auth_callback
TEMPLE_OAUTH_REDIRECT_URIS=

# Session TTL (seconds, default 24h)
TEMPLE_SESSION_TTL=0
