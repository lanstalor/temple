# Temple Configuration
TEMPLE_HOST=0.0.0.0
TEMPLE_PORT=8100
TEMPLE_LOG_LEVEL=info

# ChromaDB
TEMPLE_CHROMA_MODE=embedded
TEMPLE_CHROMA_HOST=temple-chromadb
TEMPLE_CHROMA_PORT=8000

# Embedding model
TEMPLE_EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Data directories
TEMPLE_DATA_DIR=./data
TEMPLE_KUZU_DIR=./data/kuzu
TEMPLE_AUDIT_DIR=./data/audit

# Authentication (empty = no auth, for local dev)
# Set to a strong random string to enable Bearer token auth on the MCP endpoint
TEMPLE_API_KEY=

# Session TTL (seconds, default 24h)
TEMPLE_SESSION_TTL=86400
